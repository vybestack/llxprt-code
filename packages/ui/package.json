{
  "name": "@vybestack/llxprt-ui",
  "version": "0.1.0",
  "description": "Experimental terminal UI for llxprt-code",
  "type": "module",
  "main": "src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "bun": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "echo 'UI package uses bun runtime - no build required'",
    "dev": "bun run src/main.tsx",
    "start": "bun run src/main.tsx",
    "lint": "eslint \"src/**/*.{ts,tsx}\" \"scripts/**/*.ts\"",
    "test": "vitest run",
    "test:ci": "vitest run",
    "test:coverage": "vitest run --coverage",
    "check:limits": "tsx scripts/check-limits.ts",
    "check": "npm run lint && npm run test && npm run check:limits",
    "typecheck": "echo 'Typecheck temporarily disabled due to OpenTUI source-based exports'"
  },
  "keywords": [
    "llxprt",
    "terminal-ui",
    "opentui",
    "experimental"
  ],
  "author": "Vybestack",
  "license": "ISC",
  "engines": {
    "node": ">=20",
    "bun": ">=1.2.0"
  },
  "dependencies": {
    "@opentui/core": "file:../opentui/packages/core",
    "@opentui/react": "file:../opentui/packages/react",
    "clipboardy": "^4.0.0",
    "react": "^19.2.1"
  },
  "peerDependencies": {
    "@vybestack/llxprt-code-core": "file:../core"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@testing-library/react": "^16.3.0",
    "@types/bun": "^1.3.4",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "@vitest/eslint-plugin": "^1.5.1",
    "eslint": "^9.39.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "globals": "^16.5.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
