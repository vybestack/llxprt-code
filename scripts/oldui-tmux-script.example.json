{
  "tmux": {
    "cols": 100,
    "rows": 24,
    "historyLimit": 50000,
    "scrollbackLines": 5000,
    "initialWaitMs": 6000
  },
  "yolo": false,
  "steps": [
    { "type": "line", "text": "/profile load synthetic" },
    {
      "type": "waitFor",
      "scope": "screen",
      "contains": "Profile 'synthetic' loaded",
      "timeoutMs": 15000
    },
    { "type": "capture", "label": "after-profile", "scope": "screen" },

    { "type": "line", "text": "write me a haiku" },
    {
      "type": "waitFor",
      "scope": "screen",
      "contains": "âœ¦",
      "timeoutMs": 30000
    },
    { "type": "capture", "label": "after-haiku", "scope": "screen" },

    { "type": "line", "text": "!ls -la docs" },
    {
      "type": "waitFor",
      "scope": "scrollback",
      "contains": "Shell Command",
      "timeoutMs": 15000
    },
    { "type": "capture", "label": "after-ls-docs", "scope": "screen" },

    { "type": "copyMode", "enter": true },
    { "type": "copyMode", "pageUp": 5 },
    { "type": "capture", "label": "scrolled-up", "scope": "screen" },
    { "type": "copyMode", "exit": true },

    { "type": "line", "text": "/quit", "submitKeys": ["Enter"] },
    { "type": "waitForExit", "timeoutMs": 15000 }
  ]
}
